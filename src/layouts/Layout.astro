---
interface Props {
  title: string;
  description?: string;
  activePage?: string;
}

const { title, description = "SYNAPSE MAMC BGMI 2026 - Official BGMI Esports Tournament by Maulana Azad Medical College", activePage = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
