---
interface Props {
  title: string;
  description?: string;
  activePage?: string;
}

const { 
  title, 
  description = "SYNAPSE MAMC BGMI 2026 - Official BGMI Esports Tournament by Maulana Azad Medical College", 
  activePage = "" 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="keywords" content="BGMI, esports, tournament, Synapse, MAMC, gaming, Battlegrounds Mobile India">
  <meta name="author" content="Synapse MAMC Organizing Committee">
  
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:image" content="/data/img/og-preview.png">
  
  <title>{title}</title>
  
  <link rel="icon" type="image/png" href="/data/img/mamclogo_nobg.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
  <header class="site-header" id="header">
    <div class="header-inner">
      <div class="brand-logos">
        <img src="/data/img/mamclogo_nobg.png" alt="MAMC Logo" class="brand-logo-img mamc" width="110" height="110">
      </div>
      
      <a href="/" class="site-logo">
        <span class="highlight">SYNAPSE</span> 2026
      </a>
      
      <nav class="main-nav" id="mainNav" aria-label="Primary Navigation">
        <button type="button" class="nav-close" id="navClose" aria-label="Close menu">Ã—</button>
        <ul class="nav-list">
          <li><a href="/" class:list={["nav-link", { active: activePage === "home" }]}>Home</a></li>
          <li><a href="/teams" class:list={["nav-link", { active: activePage === "teams" }]}>Teams</a></li>
          <li><a href="/standings" class:list={["nav-link", { active: activePage === "standings" }]}>Standings</a></li>
          <li><a href="/schedule" class:list={["nav-link", { active: activePage === "schedule" }]}>Schedule</a></li>
          <li><a href="/events" class:list={["nav-link", { active: activePage === "events" }]}>Events</a></li>
          <li><a href="/watch" class:list={["nav-link", { active: activePage === "watch" }]}>Watch</a></li>
        </ul>
      </nav>

      <div class="header-extra">
        <img src="/data/img/synapse_nobg.png" alt="Synapse Logo" class="brand-logo-img synapse">
        <button type="button" class="menu-toggle" id="menuToggle" aria-label="Toggle navigation menu">
          <span></span><span></span><span></span>
        </button>
      </div>
    </div>
  </header>

  <!-- The stray character was here. Removed it. -->
  <slot />

  <footer class="site-footer">
    <!-- Footer content remains the same -->
  </footer>

  <!-- Fixed UI Elements -->
  <div class="contact-tab" id="contactTab">
    <button type="button" class="contact-toggle" id="contactToggle" aria-label="Contact organizers">
      <i class="fab fa-whatsapp"></i>
    </button>
    <div class="contact-panel" id="contactPanel">
       <!-- ... contact cards ... -->
    </div>
  </div>
   
  <div class="nav-overlay" id="navOverlay"></div>

  <a href="https://github.com/denxvil" target="_blank" rel="noopener noreferrer" class="denvil-badge">
    <span class="denvil-icon">ðŸ’ </span>
    <span class="denvil-text">coded by <strong>Harsh</strong></span>
  </a>

  <script>
    const menuToggle = document.getElementById('menuToggle');
    const mainNav = document.getElementById('mainNav');
    const navOverlay = document.getElementById('navOverlay');
    const navClose = document.getElementById('navClose');
    const header = document.getElementById('header');

    // Navigation logic
    const closeNav = () => {
      mainNav?.classList.remove('active');
      navOverlay?.classList.remove('active');
      document.body.classList.remove('nav-open');
    };

    menuToggle?.addEventListener('click', () => {
      mainNav?.classList.add('active');
      navOverlay?.classList.add('active');
      document.body.classList.add('nav-open');
    });

    [navClose, navOverlay].forEach(el => el?.addEventListener('click', closeNav));

    // Fixed Contact logic (removed TS 'as Node' error)
    const contactTab = document.getElementById('contactTab');
    const contactToggle = document.getElementById('contactToggle');

    contactToggle?.addEventListener('click', (e) => {
      e.stopPropagation();
      contactTab?.classList.toggle('open');
    });

    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement; // Safe casting for Astro scripts
      if (contactTab?.classList.contains('open') && !contactTab.contains(target)) {
        contactTab.classList.remove('open');
      }
    });
  </script>
</body>
</html>

<style is:global>
  @import '../styles/global.css';

  /* Z-INDEX FIXES */
  :root {
    --z-header: 100;
    --z-overlay: 1000;
    --z-nav: 1001;
    --z-fab: 1050; /* Contact button and Denvil badge */
  }

  .site-header {
    position: sticky;
    top: 0;
    z-index: var(--z-header);
  }

  .nav-overlay {
    z-index: var(--z-overlay);
  }

  .main-nav {
    z-index: var(--z-nav);
  }

  .contact-tab, .denvil-badge {
    z-index: var(--z-fab);
  }

  /* Prevent elements from overlapping the WhatsApp button on mobile */
  @media (max-width: 768px) {
    .contact-tab {
      bottom: 20px;
      right: 20px;
    }
    
    /* If "LOADING" is a button in your child pages, use this: */
    button:contains('LOADING'), .loading-btn {
      position: relative;
      z-index: 1; /* Keep it below layout FABS */
    }
  }
</style>
