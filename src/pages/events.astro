<style>
  .events-section {
    padding: 120px 20px 60px;
    min-height: 100vh;
  }
  
  .page-title {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    text-align: center;
    margin-bottom: 1rem;
    text-transform: uppercase;
    background: linear-gradient(135deg, var(--accent-cyan), var(--accent-purple));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .page-subtitle {
    text-align: center;
    color: var(--text-secondary);
    margin-bottom: 60px;
    font-size: 1.1rem;
  }
  
  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 40px;
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .event-card {
    background: linear-gradient(135deg, rgba(15, 15, 26, 0.95), rgba(10, 10, 18, 0.95));
    border: 2px solid rgba(0, 240, 255, 0.2);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.4s ease;
    position: relative;
  }
  
  .event-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 240, 255, 0.1), rgba(188, 19, 254, 0.1));
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }
  
  .event-card:hover {
    transform: translateY(-10px);
    border-color: var(--accent-cyan);
    box-shadow: 0 10px 40px rgba(0, 240, 255, 0.3);
  }
  
  .event-card:hover::before {
    opacity: 1;
  }
  
  .event-poster {
    width: 100%;
    height: 300px;
    object-fit: cover;
    display: block;
  }
  
  .event-content {
    padding: 25px;
  }
  
  .event-title {
    font-family: var(--font-heading);
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 10px;
    color: var(--accent-cyan);
    text-transform: uppercase;
  }
  
  .event-mode {
    color: var(--text-secondary);
    font-size: 0.95rem;
    margin-bottom: 20px;
    font-style: italic;
  }
  
  .event-details {
    margin-bottom: 20px;
  }
  
  .event-detail-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 12px;
    font-size: 0.95rem;
  }
  
  .event-detail-item i {
    color: var(--accent-cyan);
    margin-right: 10px;
    margin-top: 3px;
    font-size: 1rem;
  }
  
  .event-prize {
    background: linear-gradient(135deg, rgba(255, 215, 0, 0.1), rgba(255, 215, 0, 0.05));
    border: 2px solid rgba(255, 215, 0, 0.3);
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 20px;
  }
  
  .event-prize h4 {
    color: var(--accent-gold);
    font-family: var(--font-heading);
    font-size: 1.1rem;
    margin-bottom: 8px;
  }
  
  .prize-item {
    color: var(--text-primary);
    margin-bottom: 5px;
  }
  
  .event-actions {
    display: flex;
    gap: 10px;
    margin-top: 20px;
  }
  
  .btn-register {
    flex: 1;
    padding: 12px 20px;
    background: linear-gradient(135deg, var(--accent-cyan), rgba(0, 240, 255, 0.7));
    color: var(--bg-primary);
    text-decoration: none;
    text-align: center;
    border-radius: 6px;
    font-weight: 700;
    font-family: var(--font-heading);
    text-transform: uppercase;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }
  
  .btn-register:hover {
    background: var(--accent-cyan);
    box-shadow: 0 5px 20px rgba(0, 240, 255, 0.4);
    transform: translateY(-2px);
  }
  
  .event-contacts {
    background: rgba(0, 240, 255, 0.05);
    border-radius: 6px;
    padding: 12px;
    margin-top: 15px;
    font-size: 0.9rem;
  }
  
  .event-contacts h5 {
    color: var(--accent-cyan);
    margin-bottom: 8px;
    font-family: var(--font-heading);
  }
  
  .contact-item {
    color: var(--text-secondary);
    margin-bottom: 3px;
  }
  
  @media (max-width: 768px) {
    .events-section {
      padding: 100px 15px 40px;
    }
    
    .events-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    
    .event-poster {
      height: 250px;
    }
  }
</style>
